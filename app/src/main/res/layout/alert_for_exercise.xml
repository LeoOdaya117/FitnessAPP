<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:backgroundTint="@color/white"
    android:paddingBottom="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            tools:ignore="MissingClass">

            <ImageView
                android:id="@+id/close_button"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_gravity="end"
                android:src="@drawable/x"
                android:layout_marginBottom="10dp"
                android:text="Close"/>

            <TextView
                android:id="@+id/modal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginBottom="12dp"/>

            <WebView
                android:id="@+id/youtubeplayer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                tools:ignore="WebViewLayout" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="MissingClass">

                    <!-- Your existing layout content -->
                    <LinearLayout
                        android:id="@+id/eqlinear"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EQUIPMENT:"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/modal_equipment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textAlignment="textStart"
                            android:maxLines="2"
                            android:text="None"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/label_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DESCRIPTION"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/modal_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textAlignment="textStart"
                        android:maxLines="2"
                    android:text="Description"/>

                    <!-- See more button for description -->
                    <TextView
                        android:id="@+id/see_more_description_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See more"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#686868"
                        android:layout_gravity="start"
                        android:backgroundTint="#00000000"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INSTRUCTION"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/modal_instruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:layout_marginTop="5dp"
                        android:maxLines="2"
                    android:text="Instruction"/>

                    <!-- See more button for instruction -->
                    <TextView
                        android:id="@+id/see_more_instruction_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See more"
                        android:textColor="#686868"
                        android:layout_gravity="start"
                        android:backgroundTint="#00000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:textSize="13sp"

                        android:visibility="visible"/>

                    <!-- Add any additional views or content here -->

                </LinearLayout>
            </ScrollView>

            <!-- Add any additional views or content here -->

        </LinearLayout>

</androidx.cardview.widget.CardView>
