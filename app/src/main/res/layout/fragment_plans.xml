<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- First CardView with ImageView and TextView -->
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/workoutCardView"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/workoutplan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/workoutplan" />
    </androidx.cardview.widget.CardView>

    <!-- Second CardView with ImageView and TextView -->
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dietCardView"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_below="@id/workoutCardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/dietplan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dietplan"/>
    </androidx.cardview.widget.CardView>

    <!-- Button below dietCardView in the right corner -->
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/buttonBelowDietCard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="35dp"
        app:cardCornerRadius="40dp"
        >

        <ImageView
            android:id="@+id/addbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/add"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
