<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Plan Duration -->
        <TextView
            android:id="@+id/textViewPlanName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 Days"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Plan Description -->
        <TextView
            android:id="@+id/textViewPlanDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 Days Subscription for gym access"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <!-- Plan Price -->
        <TextView
            android:id="@+id/textViewPlanPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: â‚± 300.00"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <!-- Subscribe Button -->
        <Button
            android:id="@+id/buttonSubscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscribe"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/icon_focused"

            android:layout_gravity="start"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
