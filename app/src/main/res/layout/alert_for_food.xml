<!-- custom_alert_dialog.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:backgroundTint="@color/white"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <ImageView
            android:id="@+id/close_button"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_gravity="end"
            android:src="@drawable/x"
            android:layout_marginBottom="10dp"
            android:text="Close"/>

        <TextView
            android:id="@+id/modal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginBottom="12dp"
            />

        <TextView
            android:id="@+id/label_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIPTION"
            android:textColor="@color/black"

            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/modal_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:text="Description"/>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MACRO NUTRIENTS"
            android:textColor="@color/black"

            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"

            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/label_calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calorie:"

                android:textColor="@color/black"

                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/modal_calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:text="0 kcal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_carb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carb:"
                android:textColor="@color/black"

                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/modal_carb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:text="0 g"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protien:"
                android:textColor="@color/black"

                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/modal_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:text="0 g"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/label_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fat:"
                android:textColor="@color/black"

                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/modal_fat"
                android:textColor="@color/black"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 g"/>

        </LinearLayout>
    </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>
