<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/other_background"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <!-- Current Weight TextView -->
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weight"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Goal Weight TextView -->
        <Button
            android:id="@+id/log_button"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Log"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"

            android:backgroundTint="#0022FB"
           />

    </LinearLayout>
    <!-- First CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/firstCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:padding="16dp"
        app:cardCornerRadius="8dp">

        <!-- Linear Layout containing weightTEXT and lineChart -->
        <LinearLayout
            android:id="@+id/weightLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Linear Layout containing TextViews -->
            <LinearLayout
                android:id="@+id/weightTEXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- Current Weight TextView -->
                <TextView
                    android:id="@+id/textViewStatusLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Current"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                     />

                <!-- Goal Weight TextView -->
                <TextView
                    android:id="@+id/textViewStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Goal"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    android:gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <!-- Current Weight TextView -->
                <TextView
                    android:id="@+id/currentWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No data"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <!-- Goal Weight TextView -->
                <TextView
                    android:id="@+id/goalText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No data"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:gravity="end" />

            </LinearLayout>

            <!-- LineChart -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:foregroundTint="@color/black"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <!-- Current Weight TextView -->
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BMI"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />



    </LinearLayout>
    <!-- Second CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/secondCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="16dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/white"
        >

        <!-- Linear Layout containing weightTEXT and lineChart -->
        <LinearLayout
            android:id="@+id/bmilayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            app:cardCornerRadius="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <!-- Current Weight TextView -->
                <TextView
                    android:id="@+id/BMIText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No data"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Existing content -->

                    <!-- Additional circular view -->
                    <View
                        android:id="@+id/color_indicator"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/circle_background"
                        android:layout_gravity="center"
                         />

                    <!-- Additional content -->
                    <TextView
                        android:id="@+id/fitnessCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="No data"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="end" />

                </LinearLayout>


            </LinearLayout>

            <!-- Pointer Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- Pointer 1 -->
                <LinearLayout
                    android:id="@+id/pointer1Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <!-- Pointer -->
                    <View
                        android:id="@+id/pointer1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/pointer"
                        android:visibility="invisible" />

                    <!-- Color -->
                    <View
                        android:id="@+id/color1"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#036bfc" />

                    <!-- Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Pointer 2 -->
                <LinearLayout
                    android:id="@+id/pointer2Layout"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <!-- Pointer -->
                    <View
                        android:id="@+id/pointer2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/pointer"
                        android:visibility="invisible" />

                    <!-- Color -->
                    <View
                        android:id="@+id/color2"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#007bff" />

                    <!-- Label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Pointer 3 -->
                <LinearLayout
                    android:id="@+id/pointer3Layout"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <!-- Pointer -->
                    <View
                        android:id="@+id/pointer3"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/pointer"
                        android:visibility="invisible" />

                    <!-- Color -->
                    <View
                        android:id="@+id/color3"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#03b5fc" />

                    <!-- Label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="18.5"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Pointer 4 -->
                <LinearLayout
                    android:id="@+id/pointer4Layout"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <!-- Pointer -->
                    <View
                        android:id="@+id/pointer4"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/pointer"
                        android:visibility="invisible" />

                    <!-- Color -->
                    <View
                        android:id="@+id/color4"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#fcce03" />

                    <!-- Label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Pointer 5 -->
                <LinearLayout
                    android:id="@+id/pointer5Layout"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <!-- Pointer -->
                    <View
                        android:id="@+id/pointer5"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/pointer"
                        android:visibility="invisible" />

                    <!-- Color -->
                    <View
                        android:id="@+id/color5"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#fc7703" />

                    <!-- Label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Pointer 6 -->
                <LinearLayout
                    android:id="@+id/pointer6Layout"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <!-- Pointer -->
                    <View
                        android:id="@+id/pointer6"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/pointer"
                        android:visibility="invisible" />

                    <!-- Color -->
                    <View
                        android:id="@+id/color6"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#fc1c03" />

                    <!-- Label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="35-40"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="#ACACAC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <!-- Current Weight TextView -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Height"
                    android:textColor="@color/text_color"
                    android:textSize="15dp"
                     />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Existing content -->



                    <!-- Additional content -->
                    <TextView
                        android:id="@+id/currentHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No data"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        />

                    <!-- Additional circular view -->
                    <View
                        android:id="@+id/height_button"

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"

                        android:background="@drawable/editicon"
                        android:layout_gravity="center"
                        android:gravity="end" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
